<Window x:Name="Snake" x:Class="SnakeGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake"
        Width="700"
        Height="700"
        KeyDown="MainWindow_KeyDown"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="559*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="#FFF0F0F0" Margin="0,5,0,5" LastChildFill="False" HorizontalAlignment="Left" Grid.ColumnSpan="2" Grid.Column="1">
            <TextBlock x:Name="ScoreText" Text="Рахунок: 0" FontSize="16" Margin="10"/>
            <TextBlock x:Name="HighScoreText" Text="Рекорд: 0" FontSize="16" Margin="10"/>
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Голова змійки" FontSize="12" HorizontalAlignment="Center"/>
                <ComboBox x:Name="SnakeHeadColorPicker" Width="120" DisplayMemberPath="Key" SelectionChanged="ColorPicker_SelectionChanged"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Тіло змійки" FontSize="12" HorizontalAlignment="Center"/>
                <ComboBox x:Name="SnakeBodyColorPicker" Width="120" DisplayMemberPath="Key" SelectionChanged="ColorPicker_SelectionChanged"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Фон" FontSize="12" HorizontalAlignment="Center"/>
                <ComboBox x:Name="BackgroundColorPicker" Width="120" DisplayMemberPath="Key" SelectionChanged="ColorPicker_SelectionChanged"/>
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <Canvas x:Name="GameCanvas" Background="Black"/>
            <Button x:Name="StartButton" Content="Почати гру" FontSize="18" Padding="30,10" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Click="StartButton_Click" Visibility="Visible"/>
            <Grid x:Name="GameOverOverlay" Background="#80000000" Visibility="Collapsed">
                <Border Background="#FF2D2D30" CornerRadius="10" Padding="30" Width="300" Height="200"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Гра завершена!" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="FinalScoreText" Text="Ваш рахунок: 0" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <Button Content="Спробувати ще" FontSize="16" Padding="20,10" Background="#FF3F3F41"
                                Foreground="White" BorderBrush="#FF3F3F41" HorizontalAlignment="Center" Click="RestartButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
